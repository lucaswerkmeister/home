export EDITOR=vim
[[ ! -z $TMUX ]] && export TERM=screen-256color
set -o noclobber
[[ -S "$XDG_RUNTIME_DIR/ssh-agent.socket" ]] && export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/ssh-agent.socket"
HISTCONTROL=ignorespace
HISTSIZE=-1
HISTFILESIZE=-1
export SYSTEMD_LESS=RSMK # default is FRSXMK; remove X to fix pager not restoring terminal, and F because it only makes sense with X
