[color]
	ui = auto
[alias]
	st = status -sb
	lg = log --oneline --graph --all
	co = checkout
	ci = commit
	df = diff --word-diff=color --ignore-all-space
	ls = ls-files
	ca = commit -a
	dc = diff --word-diff=color --ignore-all-space --cached
	dic = diff --cached
	conflicts = diff --name-only --diff-filter=U
	sed = ! git grep -z --full-name -l '.' "$GIT_PREFIX" | xargs -0 sed -i -e
	why = blame
	how-old = blame
[user]
	email = mail@lucaswerkmeister.de
	name = Lucas Werkmeister
[push]
	default = simple
[core]
	editor = vim
	autocrlf = input
	pager = exec less --RAW-CONTROL-CHARS --chop-long-lines --tabs=1,5
	abbrev = 10
[status]
	branch = true
	short = true
[fetch]
	prune = true
[merge]
	conflictstyle = diff3
[rerere]
	enabled = true
[rebase]
	autosquash = true
[help]
	autocorrect = 10
[pull]
	rebase = true
[transfer]
	fsckObjects = true
[log]
	follow = true
	abbrevCommit = true
[diff]
	colorMoved = dimmed-zebra
[sendemail]
	smtpEncryption = tls
	smtpServer = lucaswerkmeister.de
	smtpUser = mail@lucaswerkmeister.de
	smtpServerPort = 587
	confirm = always
[notes]
	rewriteRef = refs/notes/commits
[protocol]
	version = 2

# shortcut remote "protocols":
# 
# - gh:    github, public
# - gh_:   github, private
# - ghlw:  github/lucaswerkmeister, public
# - ghlw_: github/lucaswerkmeister, private
# - gist:  gist, public
# - gist_: gist, private
# - wmg:   wikimedia gerrit
# - wmge:  wikimedia gerrit mediawiki/extensions
# 
# public: pull over HTTPS, push over SSH;
# private: pull and push over SSH
# 
# (hosts `github`, `github-gist`, `gerrit` are set up in SSH config)

[url "https://github.com/"]
	insteadOf = "gh:"
[url "https://github.com/lucaswerkmeister/"]
	insteadOf = "ghlw:"
[url "https://gist.github.com/"]
	insteadOf = "gist:"
[url "https://gerrit.wikimedia.org/r/"]
	insteadOf = "wmg:"
[url "https://gerrit.wikimedia.org/r/mediawiki/extensions/"]
	insteadOf = "wmge:"
[url "https://gitlab.wikimedia.org/"]
	insteadOf = "gl:"
[url "https://gitlab.wikimedia.org/lucaswerkmeister/"]
	insteadOf = "gllw:"
[url "github:"]
	insteadOf = "gh_:"
	pushInsteadOf = "gh:"
	pushInsteadOf = "https://github.com/"
	pushInsteadOf = "gh_:"
[url "github:lucaswerkmeister/"]
	insteadOf = "ghlw_:"
	pushInsteadOf = "ghlw:"
	pushInsteadOf = "https://github.com/lucaswerkmeister/"
	pushInsteadOf = "ghlw_:"
[url "github-gist:"]
	insteadOf = "gist_:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "gist_:"
[url "gerrit:"]
	pushInsteadOf = "wmg:"
[url "gerrit:mediawiki/extensions/"]
	pushInsteadOf = "wmge:"
[url "gitlab:"]
	pushInsteadOf = "gl:"
[url "gitlab:lucaswerkmeister/"]
	pushInsteadOf = "gllw:"
[init]
	defaultBranch = main
[merge "npm-merge-driver"]
	name = automatically merge npm lockfiles
	driver = npx npm-merge-driver merge %A %O %B %P
[advice]
	skippedCherryPicks = false
