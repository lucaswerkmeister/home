[color]
	ui = auto
[alias]
	st = status -sb
	lg = log --oneline --graph --decorate --all --author-date-order
	co = checkout
	ci = commit
	df = diff --word-diff=color
	ls = ls-files
	ca = commit -a
	dc = diff --word-diff=color --cached
	dic = diff --cached
	conflicts = diff --name-only --diff-filter=U
[user]
	email = mail@lucaswerkmeister.de
	name = Lucas Werkmeister
[push]
	default = simple
[core]
	editor = vim
	autocrlf = input
	pager = less --RAW-CONTROL-CHARS --chop-long-lines --tabs=1,5
[status]
	branch = true
	short = true
[fetch]
	prune = true
[merge]
	conflictstyle = diff3
[rerere]
	enabled = true
[rebase]
	autosquash = true
[help]
	autocorrect = 10
[pull]
	rebase = true

# shortcut remote "protocols":
# 
# - gh:    github, public
# - gh_:   github, private
# - ghlw:  github/lucaswerkmeister, public
# - ghlw_: github/lucaswerkmeister, private
# - ghc:   github/ceylon, public
# - ghc_:  github/ceylon, private
# 
# public: pull over HTTPS, push over SSH;
# private: pull and push over SSH
# 
# (host `github` is set up in SSH config)

[url "https://github.com/"]
    insteadOf = "gh:"
[url "https://github.com/lucaswerkmeister/"]
    insteadOf = "ghlw:"
[url "https://github.com/ceylon/"]
    insteadOf = "ghc:"
[url "github:"]
    insteadOf = "gh_:"
    pushInsteadOf = "gh:"
    pushInsteadOf = "https://github.com/"
    pushInsteadOf = "gh_:"
[url "github:lucaswerkmeister/"]
    insteadOf = "ghlw_:"
    pushInsteadOf = "ghlw:"
    pushInsteadOf = "https://github.com/lucaswerkmeister/"
    pushInsteadOf = "ghlw_:"
[url "github:ceylon/"]
    insteadOf = "ghc_:"
    pushInsteadOf = "ghc:"
    pushInsteadOf = "https://github.com/ceylon/"
    pushInsteadOf = "ghc_:"
